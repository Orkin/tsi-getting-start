<?php

$title = 'Delete blog';
$url   = $this->url('blog', ['action' => 'delete', 'id' => $this->blog->getId()]);

$this->headTitle($title);
?>
<h1><?= $this->escapeHtml($title) ?></h1>

<p>
    Are you sure that you want to delete
    "<?= $this->escapeHtml($this->blog->getTitle()) ?>" by
    "<?= $this->escapeHtml($this->blog->getText()) ?>"?
</p>

<form action="<?= $url ?>" method="post">
    <div class="form-group">
        <input type="hidden" name="id" value="<?= (int)$this->blog->getId() ?>"/>
        <input type="submit" class="btn btn-danger" name="del" value="Yes"/>
        <input type="submit" class="btn btn-success" name="del" value="No"/>
    </div>
</form>
